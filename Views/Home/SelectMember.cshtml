@model IEnumerable<ChurchMember>
@{
    ViewData["Title"] = "Select A Church Member";
}
<h1 class="display-4">List of Church Members</h1>
<p>Look through the table and decide which member to create a record with.</p>
<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Joint Account?</th>
            <th>Joint Account's First Name</th>
            <th>Select Member</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr><td colspan="6" class="text-center">No Data</td></tr>
        }
        else
        {
            @foreach (ChurchMember ch in Model)
            {
                <tr>
                    <td>@ch.FirstName</td>
                    <td>@ch.LastName</td>
                    @if (ch.JointAccount)
                    {
                        <td>Yes</td>
                        <td>@ch.JointFirstName</td>
                    }
                    else
                    {
                        <td>No</td>
                        <td>None</td>
                    }
                    <td><a asp-action="CreateRecordEntry" asp-route-id="@ch.Id">Create Record</a></td>
                </tr>
            }
        }
    </tbody>
</table>
<a asp-action="Index">Back to Main Menu</a>